{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
    <div class="container">
        <h1>Project</h1>
        <div class="card p-lg-5">
            <table class="table table-striped">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ project.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ project.title }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>{{ project.image }}</td>
                </tr>
                <tr>
                    <th>Filename</th>
                    <td>{{ project.filename }}</td>
                </tr>
                <tr>
                    <th>NumberOfTasks</th>
                    <td>{{ project.numberOfTasks }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ project.description }}</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>{{ project.status }}</td>
                </tr>
                </tbody>
            </table>
            {{ include('project/_delete_form.html.twig') }}
        </div>

    </div>
{% endblock %}
